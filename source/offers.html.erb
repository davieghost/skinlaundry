<div id="main">
	<div id="location-offer" class="location-offer">
		<h1 class="buy">Buy</h1>
		<h2 class="treatments"><%= treatment_offer["title_formatted"]%></h2>
		<h3 class="price">A $225 Value</h3>
	</div>

	<div class="offer-form-container text-center clearfix">
		<p class="description">CALL TODAY AT <span>877-SKIN-TEAM</span>, OR</p>
		<p class="description">SIGN UP BELOW TODAY TO RESERVE THIS OFFER</p>

		<form action = "<%= $BOOKING_ENDPOINT%>subscribe" method = "post" class = "subscriptionform order-form" data-ev-cat = "Leads" data-ev-act = "Subscribe" data-ev-lbls = "Subscribe - Footer section">
			<div class="form-row clearfix">
				<input type="text" name="FNAME" class="border-gradient" placeholder="FIRST NAME">
				<input type="text" name="LNAME" class="border-gradient" placeholder="LAST NAME">
			</div>

			<div class="form-row clearfix">
				<input type="email" name="EMAIL" class="border-gradient" placeholder="EMAIL">
				<input type="tel" name="PHONE" class="border-gradient" placeholder="PHONE NUMBER">
			</div>

			<div class="form-row clearfix">
				<label for="store-location" class="text-center">SELECT A LOCATION</label>
				<select name="LOCATION" class="store-location border-gradient">
					<% $LOCATIONS_LIST["current"].each do |location_key, location| %>
					<option value = "<%= location["name"]%>" <%= location["zone"] == zone ? "selected = 'selected'" : ""%>><%= location["name"]%></option>
					<%end%>
				</select> 
			</div>
			<div style="position: absolute; left: -5000px;">
			<input type="text" name="b_f239ffc6f2d639917ba8f0775_fd450ee471" tabindex="-1" value="">
			<input type = "hidden" name = "list" value = "offers" />
			</div>

			<div class="form-row clearfix">
  				<button class="join-btn border-gradient" name="join" type="submit">JOIN</button>
			</div>
  		</form>
	</div>
</div>
<script type="text/javascript">
	document.getElementsByTagName("body")[0].className += " offers";
</script>

