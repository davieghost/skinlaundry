<!doctype html>
<html>
  <head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script FOR="window">
      $(window).on('beforeunload', function(){
      console.log("window unloading");
      $('video').css('display', 'none');
      $(".video-bg-loader").css('display','block');
      $('video').css({opacity: '0'});
      $('body').css({opacity: '0'});
      $('html').css({opacity: '0'});
    });
  </script>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    
    <title>SkinLaundry</title>
    
    <%= stylesheet_link_tag "application" %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css">  
    <%= javascript_include_tag "instafeed" %>
  </head>
  <body class="<%= page_classes %>">
  <div class="body-mask"></div>

    <img class="video-bg-loader" src="/images/SL_mobil_background_small.jpg">
    <!-- <div class="videobg"> -->
      <video autoplay loop muted class="hide-mobile">
        <source src="/video/02.mp4" type="video/mp4">
        <source src="/video/02.webm" type="video/mp4">
      </video>
      <div class="hide-desktop cover"></div>
      <img src="/images/SL_Watermark.png" id="watermark"/>
    <!-- </div> -->
    
    <%= partial "layouts/header" %>
    <%= partial "layouts/nav_page" %>

      <%= yield %>
    
    <%= partial "layouts/footer" %>  
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <%= javascript_include_tag  "application" %>


    <script FOR="window">
      $(window).load(function() {
        console.log("window loaded");
        $('video').css({opacity: '1'});
        $('body').css({opacity: '1'});
        $('html').css({opacity: '1'});
        $(".video-bg-loader").css('display','none');
        $('video').css('display', 'block');
        $('a').click(function(){
          $(".video-bg-loader").css('display','block');
          $('video').css({opacity: '0'});
          $('body').css({opacity: '0'});
          $('html').css({opacity: '0'});
        });
      });
    </script>
  </body>
</html>