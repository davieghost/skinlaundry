<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    
    <title>Skin Laundry</title>
    
    <%= stylesheet_link_tag "application" %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css">  
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= $GOOGLE_API_KEY %>"></script>
    <script>
      var globalvar = {cookie_domain : '<%= $COOKIE_DOMAIN %>'};
    </script>

    <%= javascript_include_tag "instafeed" %>

  </head>
  <body class="<%= page_classes %>" ng-app = "SLWeb" ng-controller = "BaseCtrl as base">
    <div class="videobg">
      <video autoplay loop muted poster="/images/SL_mobil_background.jpg" class="hide-mobile">
      <source src="/video/02.mp4" type="video/mp4">
      <source src="/video/02.webm" type="video/mp4">
      </video>
      <div class="hide-desktop cover"></div>
      <img src="/images/SL_Watermark.png" id="watermark"/>
    </div>
    
    <%= partial "layouts/header" %>
    <%= partial "layouts/nav_page" %>

      <%= yield %>
    
    <%= partial "layouts/footer" %>
    <script type = "text/javascript">
      var stores = <%= $LOCATIONS_LIST["current"].to_json %>
      var temp = [];
      for(store_key in stores){
        if(stores.hasOwnProperty(store_key))
          stores[store_key]["key"] = store_key;
          temp.push(stores[store_key]);
      }
      stores = temp;
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src ="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script type = "text/javascript" src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script type = "text/javascript" src = "https://code.angularjs.org/1.2.28/angular-animate.js"></script>
    <script type = "text/javascript" src = "https://code.angularjs.org/1.2.26/angular-route.min.js"></script>
    <script type = "text/javascript" src = "https://code.angularjs.org/1.2.26/angular-resource.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <%= javascript_include_tag "geocode" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "skinlaundry" %>
  </body>
</html>